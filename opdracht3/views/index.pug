extends layout

block content
  main
    h1= title
    ul.keys
      li(data-key="65").key
        kbd A 
        audio(data-key='65' src='sounds/clap.wav' controls='controls')
        span.sound clap
      li(data-key="83").key
        kbd S 
        audio(data-key='83' src='sounds/hihat.wav' controls='controls')
        span.sound hihat
      li(data-key="68").key
        kbd D 
        audio(data-key='68' src='sounds/kick.wav' controls='controls')
        span.sound kick
      li(data-key="70").key
        kbd F 
        audio(data-key='70' src='sounds/openhat.wav' controls='controls')
        span.sound openhat
      li(data-key="71").key
        kbd G 
        audio(data-key='71' src='sounds/boom.wav' controls='controls')
        span.sound kick
      li(data-key="72").key
        kbd H 
        audio(data-key='72' src='sounds/ride.wav' controls='controls')
        span.sound ride
      li(data-key="74").key
        kbd J 
        audio(data-key='74' src='sounds/snare.wav' controls='controls')
        span.sound snare
      li(data-key="75").key
        kbd K 
        audio(data-key='75' src='sounds/tom.wav' controls='controls')
        span.sound tom
      li(data-key="76").key
        kbd L 
        audio(data-key='76' src='sounds/tink.wav' controls='controls')
        span.sound tink
      li(data-key="81").key
        kbd Q 
        audio(data-key='81' src='sounds/airhorn.wav' controls='controls')
        span.sound Airhorn          

  script(src='js/script.js')
